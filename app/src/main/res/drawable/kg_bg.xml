<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:top="1px">
        <shape android:shape="rectangle">
            <padding android:left="2dp" android:top="2dp" android:right="2dp"
                     android:bottom="2dp" />
        </shape>
    </item>
    <item  android:top="1px">
        <shape android:shape="rectangle">
            <solid
                android:color="#88404040"/>
            <padding android:left="0.3dp" android:top="0.3dp" android:right="1dp"
                     android:bottom="1dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <gradient
                android:startColor="#EDEEEF"
                android:centerColor="#DBDEDF"
                android:endColor="#DBDEDF"
                android:useLevel="true"
                android:angle="90"
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="45"/>
            <!--<solid-->
                <!--android:color="#EDEEEF"/>-->
        </shape>
    </item>
</layer-list>